{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "systemConfig",
    "properties": {
        "defaultAdminUserID": {
            "type": "string"
        },
        "defaultAdminRoleID": {
            "type": "string"
        },
        "defaultJudgerUserID": {
            "type": "string"
        },
        "defaultJudgerRoleID": {
            "type": "string"
        },
        "defaultUserRoleID": {
            "type": "string"
        },
        "db": {
            "type": "object",
            "properties": {
                "url": {
                    "type": "string"
                },
                "options": {
                    "type": "object"
                }
            },
            "required": [
                "url",
                "options"
            ]
        },
        "mail": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "options": {
                    "type": "object"
                },
                "from": {
                    "type": "string"
                }
            },
            "required": [
                "enabled"
            ]
        },
        "http": {
            "type": "object",
            "properties": {
                "port": {
                    "type": "number"
                },
                "hostname": {
                    "type": "string"
                },
                "https": {
                    "type": "boolean"
                },
                "certificate": {
                    "type": "string"
                },
                "privatekey": {
                    "type":"string"
                }
            },
            "required": [
                "port",
                "hostname",
                "https"
            ]
        }
    },
    "required": [
        "defaultAdminUserID",
        "defaultAdminRoleID",
        "defaultJudgerUserID",
        "defaultJudgerRoleID",
        "defaultUserRoleID",
        "db",
        "mail",
        "http"
    ]
}